{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}